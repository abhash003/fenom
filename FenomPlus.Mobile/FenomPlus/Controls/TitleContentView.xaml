<?xml version="1.0" encoding="UTF-8" ?>
<ContentView HorizontalOptions="FillAndExpand"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FenomPlus.Controls.TitleContentView">

    <ContentView.Content>

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image  Grid.Column="1"
                    Source="TitleIcon"
                    Aspect="AspectFit"
                    Margin="0, 0, 20, 0"
                    HorizontalOptions="CenterAndExpand"/>

            <StackLayout Grid.Column="2" 
                         Orientation="Horizontal" 
                         HorizontalOptions="EndAndExpand" 
                         Spacing="10" 
                         Margin="5,0,5,0">

                <ImageButton Source="{Binding Battery.Image}" Aspect="AspectFit" Clicked="ImageButton_OnClicked"/>

                <ImageButton Source="{Binding QualityControlExpiration.Image}" Aspect="AspectFit"  Clicked="ImageButton_OnClicked"/>

                <ImageButton Source="{Binding Sensor.Image}" Aspect="AspectFit"  Clicked="ImageButton_OnClicked"/>

                <ImageButton Source="{Binding Device.Image}" Aspect="AspectFit"  Clicked="ImageButton_OnClicked"/>

                <ImageButton Source="{Binding RelativeHumidity.Image}" Aspect="AspectFit"  Clicked="ImageButton_OnClicked"/>

                <ImageButton Source="{Binding Temperature.Image}" Aspect="AspectFit"  Clicked="ImageButton_OnClicked"/>

                <ImageButton Source="{Binding Pressure.Image}" Aspect="AspectFit"  Clicked="ImageButton_OnClicked"/>

            </StackLayout>

        </Grid>

    </ContentView.Content>

</ContentView>