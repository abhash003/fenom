<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:border="clr-namespace:Syncfusion.XForms.Border;assembly=Syncfusion.Core.XForms" xmlns:controls="clr-namespace:FenomPlus.Controls" x:DataType="controls:StatusButtonView"
             xmlns:svg="clr-namespace:TinySvgHelper;assembly=TinySvgHelper"
             xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             xmlns:local="clr-namespace:FenomPlus.ViewModels;assembly=FenomPlus"
             xmlns:converters="http://xamarin.com/schemas/2020/toolkit"
             x:Class="FenomPlus.Controls.QCButtonView">

    <ContentView.Resources>
        <ResourceDictionary>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentView.Resources>

    <buttons:SfButton x:Name="InnerButton" 
                    HasShadow="True" 
                    BackgroundColor="#F9F9F0"
                    BorderColor="#E7E7E7" 
                    BorderWidth="1" 
                    EnableRippleEffect="True"
                    Margin="10,10,10,0">

        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" x:DataType="controls:QcButtonViewModel">

            <Grid BackgroundColor="#F9F9F0"  
                  HorizontalOptions="FillAndExpand" 
                  VerticalOptions="FillAndExpand" 
                  Grid.RowSpacing="0" 
                  Grid.Padding="0"
                  IsVisible="{Binding Assigned}">

            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="1.5*" />
            </Grid.RowDefinitions>

            <Label x:Name="Header"
                    Grid.Row="0"
                    Text="{Binding Header}"
                    VerticalOptions="Start" 
                    VerticalTextAlignment="Center" 
                    HorizontalOptions="Center" 
                    TextColor="#333" 
                    FontSize="18"/>

            <Grid Grid.Row="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <Label Text="Status:"
                       Grid.Column="0"
                       VerticalOptions="Center" 
                       VerticalTextAlignment="Start" 
                       HorizontalOptions="End" 
                       TextColor="#333" 
                       FontSize="Small"/>

                <Label x:Name="Status"
                       Grid.Column="1"
                       Margin="10,0,0,0"
                       Text="{Binding Status}"
                       VerticalOptions="Center" 
                       VerticalTextAlignment="Start" 
                       HorizontalOptions="Start" 
                       TextColor="#333" 
                       FontSize="Small"/>

            </Grid>


            <Grid Grid.Row="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <Label Text="Expires:"
                       Grid.Column="0"
                       VerticalOptions="Center" 
                       VerticalTextAlignment="Start" 
                       HorizontalOptions="End" 
                       TextColor="#333" 
                       FontSize="Small"/>

                <Label x:Name="Expires"
                        Grid.Column="1" 
                        Margin="10,0,0,0"
                        Text="{Binding Expires}"
                        VerticalOptions="Center" 
                        HorizontalOptions="Start" 
                        TextColor="#333" 
                        FontSize="Small"/>

            </Grid>

            <Grid Grid.Row="3">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <Label Text="Next Test:"
                       Grid.Column="0"
                       VerticalOptions="Center" 
                       VerticalTextAlignment="Start" 
                       HorizontalOptions="End" 
                       TextColor="#333" 
                       FontSize="Small"/>

                <Label x:Name="NextTest"
                        Grid.Column="1" 
                        Margin="10,0,0,0"
                        Text="{Binding NextTest}"
                        FontSize="16"
                        TextColor="#333"  
                        HorizontalOptions="Start"
                        VerticalOptions="Center"/>

            </Grid>

            <Grid Grid.Row="4">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <Label Text="Chart:"
                       Grid.Column="0"
                       VerticalOptions="Center" 
                       VerticalTextAlignment="Center" 
                       HorizontalOptions="End" 
                       TextColor="#333" 
                       FontSize="Small"/>

                <Image x:Name="Chart"
                       Grid.Column="1"
                       Margin="10,10,0, 10"
                       Source="bar_chart"
                       Aspect="AspectFill"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"/>

            </Grid>


        </Grid>

            <Grid HorizontalOptions="FillAndExpand" 
                  VerticalOptions="FillAndExpand"
                  BackgroundColor="#F9F9F0"
                  IsVisible="{Binding Assigned, Converter={StaticResource InvertedBoolConverter}}">

                <Label Text="Add User" FontSize="24"
                       HorizontalOptions="Center" 
                       VerticalOptions="Center"/>

            </Grid>

        </Grid>

    </buttons:SfButton>

</ContentView>