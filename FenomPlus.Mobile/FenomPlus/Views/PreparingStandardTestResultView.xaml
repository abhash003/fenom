<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FenomPlus.Views.PreparingStandardTestResultView">
<Shell.TitleView>
        <Image Source="TitleIcon"
               Aspect="AspectFit"
               Margin="0, 16"
               HorizontalOptions="StartAndExpand"
        />
    </Shell.TitleView>
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Label Text="Preparing"
                   FontSize="32"
                   TextColor="#333"
                   HorizontalTextAlignment="Center"
                   />
            <Label Text="{Binding TestType}"
                   FontSize="32"
                   TextColor="#333"
                   HorizontalTextAlignment="Center"
                   />
            <Label Text="{Binding Seconds}"
                   FontSize="100"
                   FontAttributes="Bold"
                   TextColor="#333"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   />
            <Label Text="seconds"
                   FontSize="24"
                   TextColor="#333"
                   HorizontalTextAlignment="Center"
                   />
        </StackLayout>   
    </ContentPage.Content>
</ContentPage>

