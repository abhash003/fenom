<?xml version="1.0" encoding="UTF-8" ?>
<views:BaseContentPage
    xmlns:views="clr-namespace:FenomPlus.Views"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:FenomPlus.Controls" xmlns:busyindicator="clr-namespace:Syncfusion.SfBusyIndicator.XForms;assembly=Syncfusion.SfBusyIndicator.XForms"
    x:Class="FenomPlus.Views.PreparingStandardTestResultView"
    Title="{Binding Title}"
    Style="{StaticResource MainView}"
    Shell.NavBarIsVisible="True"
    NavigationPage.HasBackButton="False"
    NavigationPage.HasNavigationBar="False">

    <Shell.TitleView>
        <Image Source="TitleIcon"
               Aspect="AspectFit"
               Margin="0, 16"
               HorizontalOptions="StartAndExpand"
        />
    </Shell.TitleView>

    <ContentPage.Content>

            <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">

            <controls:MarigoldProgressWheel x:Name="MarigoldProgressWheel" Margin="40" AutoPlay="True" AutoHide="False"/>

            <!--<Label Text="Preparing results, please wait."
                   Style="{StaticResource Header}"
                   VerticalTextAlignment="Center"/>-->

        </StackLayout>

    </ContentPage.Content>

</views:BaseContentPage>

