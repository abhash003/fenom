<?xml version="1.0" encoding="UTF-8" ?>
<views:BaseContentPage
    xmlns:views="clr-namespace:FenomPlus.Views"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:FenomPlus.Controls"
    xmlns:busyindicator="clr-namespace:Syncfusion.SfBusyIndicator.XForms;assembly=Syncfusion.SfBusyIndicator.XForms"
    x:Class="FenomPlus.Views.DevicePowerOnView"
    Title="{Binding Title}"
    Style="{StaticResource MainView}"
    Shell.NavBarIsVisible="True"
    NavigationPage.HasBackButton="False"
    NavigationPage.HasNavigationBar="False">

    <Shell.TitleView>
        <controls:TitleContentView />
    </Shell.TitleView>

    <ContentPage.Content>

        <StackLayout VerticalOptions="Fill"  HorizontalOptions="Fill">

            <controls:MarigoldActivityWheel Margin="30" AutoPlay="True"/>

            <Label Text="Scanning for Device Please Wait..."
                   Style="{StaticResource Header}"
                   VerticalTextAlignment="Center"
                   Margin="0,0,0,30"/>

            </StackLayout>

    </ContentPage.Content>

</views:BaseContentPage>
