<?xml version="1.0" encoding="UTF-8" ?>
<views:BaseContentPage
    xmlns:views="clr-namespace:FenomPlus.Views"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:FenomPlus.Controls"
    x:Class="FenomPlus.Views.StopExhalingView"
    Title="{Binding Title}"
    Style="{StaticResource MainView}"
    Shell.NavBarIsVisible="{Binding ShowAllMenus}"
    NavigationPage.HasBackButton="False"
    NavigationPage.HasNavigationBar="False">
    <Shell.TitleView>
        <controls:TitleContentView />
    </Shell.TitleView>
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand"
                     HorizontalOptions="CenterAndExpand">
            <Label Text="Stop"
                   FontSize="80"
                   TextColor="#333"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center" />
            <Label Text="Exhaling"
                   FontSize="18"
                   TextColor="#333"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center" />
        </StackLayout>
    </ContentPage.Content>
</views:BaseContentPage>
